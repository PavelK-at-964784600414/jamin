{
  "private": true,
  "scripts": {
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "dev": "next dev",
    "dev:https": "NODE_OPTIONS='--openssl-legacy-provider' next dev -p 3000 --ssl-cert ./localhost.pem --ssl-key ./localhost-key.pem",
    "start": "next start",
    "start:prod": "NODE_ENV=production next start",
    "start:safari": "NODE_ENV=production HTTP_ONLY=true next start -p 3000",
    "start:safari-http": "NODE_ENV=production next start -p 3000 --hostname localhost",
    "start:secure": "NODE_ENV=production next start -p 3000 --experimental-https",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test:prod": "npm run build && npm run start:prod",
    "security:audit": "pnpm audit",
    "env:validate": "VALIDATE_ENV=true node -e \"require('./app/lib/env-validation.ts')\"",
    "lighthouse": "node scripts/lighthouse-audit.js",
    "bundle:analyze": "node scripts/bundle-analyzer.js",
    "deploy:check": "node scripts/deployment-checklist.js",
    "lighthouse:ci": "lhci autorun",
    "perf:audit": "npm run lighthouse && npm run bundle:analyze",
    "deploy:ready": "npm run deploy:check",
    "cdn:optimize": "node scripts/cdn-optimizer.js",
    "prod:optimize": "npm run bundle:analyze && npm run cdn:optimize",
    "start:safari-prod": "NODE_ENV=production HTTP_ONLY=true next start -p 3000 --hostname 0.0.0.0",
    "start:safari-local": "NODE_ENV=production next start -p 3000 --hostname localhost",
    "test:safari": "npm run build && npm run start:safari-local",
    "test:safari-js": "node scripts/test-safari-javascript.js"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.821.0",
    "@aws-sdk/s3-request-presigner": "^3.821.0",
    "@heroicons/react": "^2.1.4",
    "@tailwindcss/forms": "^0.5.7",
    "@vercel/postgres": "^0.10.0",
    "autoprefixer": "10.4.19",
    "bcryptjs": "^3.0.2",
    "clsx": "^2.1.1",
    "critters": "^0.0.23",
    "ffmpeg-static": "^5.2.0",
    "file-saver": "^2.0.5",
    "framer-motion": "^11.18.2",
    "lucide-react": "^0.511.0",
    "next": "15.0.0-rc.0",
    "next-auth": "5.0.0-beta.28",
    "postcss": "8.4.38",
    "react": "19.0.0-rc-f994737d14-20240522",
    "react-dom": "19.0.0-rc-f994737d14-20240522",
    "tailwindcss": "3.4.4",
    "typescript": "5.5.2",
    "use-debounce": "^10.0.4",
    "web-vitals": "^5.0.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^15.3.3",
    "@types/bcryptjs": "^2.4.6",
    "@types/file-saver": "^2.0.7",
    "@types/node": "20.14.8",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "@types/uuid": "^10.0.0",
    "copy-webpack-plugin": "^13.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.5",
    "lighthouse": "^12.6.0",
    "lighthouse-ci": "^1.13.1",
    "puppeteer": "^24.9.0"
  },
  "engines": {
    "node": ">=20.12.0"
  },
"pnpm": {
    "onlyBuiltDependencies": [
      "bufferutil",
      "ffmpeg-static", 
      "puppeteer",
      "sharp"
    ],
    "allowedDeprecatedVersions": {
      "*": "*"
    }
  }
}
